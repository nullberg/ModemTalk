<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".ui.ModemTalkFragment"


>

    <TextView
        android:id="@+id/textModemTalkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ModemTalk"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonCheckEngMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CHECK FOR ENG MODE APK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textModemTalkTitle" />

    <Button
        android:id="@+id/buttonOpenEngMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onClickButtonOpenEngMode"
        android:text="LAUNCH ENG MODE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCheckEngMode" />

    <Button
        android:id="@+id/buttonOpenSimpleUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="LAUNCH SIMPLE UI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpenEngMode" />

    <Button
        android:id="@+id/buttonDMESG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="dmesg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonOpenSimpleUI" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="377dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDMESG">


        <TextView
            android:id="@+id/textViewDmesg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textViewDmesg" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>